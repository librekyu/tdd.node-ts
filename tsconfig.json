{
  "compilerOptions": {
    "lib": [
      "es5",
      "es6"
    ],
    "jsx": "preserve",
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./build",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "types": ["node", "jest", "jest-plugin-context"],
    "baseUrl": ".",
    "typeRoots": ["./src/@types", "./node_modules/@types"],
    "skipLibCheck": true
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "**/*.spec.ts", "**/*.test.ts"]
}